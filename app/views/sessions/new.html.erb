<div class="app-login root-container">
  <div class="mdl-layout__content">
    <span><%= form_tag '/auth/identity/callback' do %></span>
    <div class="demo-card-wide login-card mdl-card mdl-shadow--2dp">
      <div class="container ma-10 pa-10">
        <div class="mdl-textfield mdl-js-textfield ma-10 field mdl-textfield--floating-label">
          <%= label_tag :auth_key, 'E-mail', class: 'mdl-textfield__label' %>
          <%= text_field_tag :auth_key, '', class: 'mdl-textfield__input', id: 'login-email' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield ma-10 field mdl-textfield--floating-label">
          <%= label_tag :password, 'Senha', class: 'mdl-textfield__label' %>
          <%= text_field_tag :auth_key, '', class: 'mdl-textfield__input', id: 'login-email' %>
        </div>
      </div>
      <div class= "link-buttons-group container ma-10 pa-10">
        <%= submit_tag 'Acessar', type: 'submit', data: { disable_with: false }, class: 'mdl-button mdl-js-button ma-10 app-btn mdl-button--colored mdl-button--raised mdl-js-ripple-effect' %>
        <%= link_to 'Login com Facebook', '/auth/facebook/', class: 'mdl-button mdl-js-button ma-10 facebook-btn app-btn mdl-button--raised mdl-js-ripple-effect' %>
        <%= image_tag('fb-icon.png', class: 'facebook-icon profile-icon') %>
        <%= link_to 'Login com Google+', '/auth/google_oauth2/', class: 'mdl-button mdl-js-button ma-10 google-btn app-btn mdl-button--raised mdl-js-ripple-effect' %>
        <%= image_tag('gp-icon.png', class: 'google-icon profile-icon') %>
        <%= link_to 'Registrar-se', '/signup', class: 'mdl-button mdl-button--colored mdl-js-button ma-10 app-btn mdl-js-ripple-effect' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
