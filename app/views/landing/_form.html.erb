<div class="mdl-grid" id="form-section">
  <div class="mdl-cell mdl-cell--4-col">
    <%= image_tag "ilustra-form.svg", { id: "form-illustration" } %>
  </div>
  <div class="mdl-cell mdl-cell--8-col mdl-cell--4-col-phone">
    <h1 class="mdl-typography--display-2">
      Tem alguma d√∫vida?<br />Entre em contato conosco
    </h1>
    <%= form_with scope: :contact, url: contact_submit_path, local: true do |f| %>
      <% flash.each do |type, msg| %> 
        <div class="#{type}">
        <span class="material-icons feedback-icon">warning</span><%= msg %>
        </div>
      <% end %>
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone form-item">
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.label 'Seu Email', class: "mdl-textfield__label" %>
            <%= f.text_field :email, class: "mdl-textfield__input" %>
          </div>
        </div>
        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone form-item">
          <div class="mdl-textfield mdl-js-textfield form-multiline-field">
            <%= f.label 'Sua Mensagem', class: "mdl-textfield__label" %>
            <%= f.text_area :message, class: "mdl-textfield__input", rows: 5 %>
          </div>
        </div>
        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone form-item">
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
            enviar&nbsp;<span class="material-icons">send</span>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>