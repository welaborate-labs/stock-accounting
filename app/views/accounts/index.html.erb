<div class="mdl-cell mdl-cell--10-col mdl-cell--4-col-phone ma-40">
<h1 class="mdl-typography--display-1 ma-10">Contas</h1>
<table class="mdl-data-table mdl-js-data-table accounts-table ma-10 mdl-shadow--2dp">
  <thead>
    <tr>
      <th>Data Criação</th>
      <th>Nome</th>
      <th>CPF/CNPJ</th>
      <th>Endereço</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>País</th>
      <th>CEP</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td class="date-data"><%= account.created_at.to_date %></td>
        <td><%= account.name %></td>
        <td><%= account.document %></td>
        <td><%= account.address %></td>
        <td><%= account.city %></td>
        <td><%= account.state %></td>
        <td><%= account.country %></td>
        <td><%= account.zipcode %></td>
        <td><%= account.status %></td>
        <td>
          <div class="mdl-button mdl-js-button mdl-button--icon table-button">
            <i class="material-icons table-item"><%= link_to 'visibility', account %></i>
          </div>
          <div class="mdl-button mdl-js-button mdl-button--icon table-button">
            <i class="material-icons table-item"><%= link_to 'edit', edit_account_path(account) %></i>
          </div>
          <div class="mdl-button mdl-js-button mdl-button--icon table-button">
            <i class="material-icons table-item"><%= link_to 'delete', account, method: :delete, data: { confirm: 'Você tem certeza' } %></i>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="mdl-button mdl-js-button add-file ma-10 mdl-button--raised mdl-button--colored">
    <%= link_to 'Adicionar Conta', new_account_path %>
</div>