<div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-phone ma-40">
<h1 class="mdl-typography--display-1 ma-10">Contas</h1>
<table class="mdl-data-table mdl-js-data-table accounts-table ma-10 mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Data de criação</th>
      <th>Id da conta</th>
      <th>Nome</th>
      <th>Documento</th>
      <th>Status</th>
      <th>Contas</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td class="date-data"><%= account.created_at.to_date %></td>
        <td><%= account.id %></td>
        <td><%= account.name %></td>
        <td><%= account.document %></td>
        <td><%= account.status %></td>
        <td>
          <button class="mdl-button mdl-js-button mdl-button--icon table-button">
            <i class="material-icons table-item"><%= link_to 'visibility', account %></i>
          </button>
          <button class="mdl-button mdl-js-button mdl-button--icon table-button">
            <i class="material-icons table-item"><%= link_to 'get_app', edit_account_path(account) %></i>
          </button>
          <button class="mdl-button mdl-js-button mdl-button--icon table-button">
            <i class="material-icons table-item"><%= link_to 'delete', account, method: :delete, data: { confirm: 'Você tem certeza' } %></i>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<button class="mdl-button mdl-js-button add-file ma-10 mdl-button--raised mdl-button--colored">
    <%= link_to 'Adicionar Conta', new_account_path %>
</button>