<div class="app-statement ma-40">
  <main>
    <div class="mdl-layout__content">
      <h1 class="mdl-typography--display-1 ma-10 mt-80">
        Notas de Corretagem Importadas
      </h1>
      <button class="mdl-button mdl-js-button ma-10 mdl-button--raised mdl-button--colored">
      <%= link_to 'Adicionar Arquivo', new_statement_file_path %>
      </button>
      <table class="mdl-data-table mdl-js-data-table ma-10 mdl-data-table--selectable mdl-shadow--2dp">
        <thead>
          <tr>
            <th class="mdl-data-table__cell--non-numeric">Id</th>
            <th class="date">Data de criação</th>
            <th>Visualizar</th>
            <th>Baixar</th>
            <th>Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% @statement_files.each do |statement_file| %>
          <tr>
            <td class="mdl-data-table__cell--non-numeric"><%= statement_file.file.record.id %></td>
            <td class="date-data"><%= statement_file.file.record.created_at.to_date %></td>
            <td>
              <button class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons"><%= link_to 'visibility', statement_file.file, target: '_blank'%></i>
              </button>
            </td>
            <td>
              <button class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons"><%= link_to 'get_app', statement_file.file, download: ''%></i>
              </button>
            </td>
            <td>
              <button class="mdl-button mdl-js-button mdl-button--icon delete-btn">
                <i class="material-icons"><%= link_to 'delete', statement_file, method: :delete, id: statement_file, data: { confirm: 'Tem certeza que deseja excluir esse arquivo?' } %></i>
              </button>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </main>
</div>