<div class="app-upload-statement">
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <div class="mdl-layout-spacer">
          <div class="mdl-cell">
          <h5>Notas de Corretagem</h5>
          </div>
        </div>
      <nav class="mdl-navigation hide-cell">
        <div class="material-icons mdl-badge mdl-badge--overlap">settings</div>
        <div class="material-icons mdl-badge mdl-badge--overlap">notifications_active</div>
        <div class="material-icons mdl-badge mdl-badge--overlap account-icon"><a><%= link_to "account_box", "/logout" %></a></div>
      </nav>
      </div>
    </header>
    <div class="mdl-layout__drawer">
      <span class="mdl-layout-title">Menu</span>
      <nav class="mdl-navigation">
        <a href="#" class="mdl-navigation__link">Dashboard</a>
        <a href="#" class="mdl-navigation__link">Perfil</a>
        <a href="#" class="mdl-navigation__link">Notas de Corretagem</a>
        <span class="material-icons logout-icon">logout<%= link_to "", "/logout" %></span>
    </nav>
    </div>
    <div class="mdl-layout__content">
      <main>
        <%= form_with model: StatementFile, method: :post, local: true do |f| %>
          <div class="mdl-grid">
            <div class="mdl-cell">
            <div class="button-group">
                <div class="mdl-grid">
                  <button class="mdl-button mdl-js-button back-btn">
                    <span class="material-icons back-icon"><%= link_to 'undo', statement_files_path %></span>
                  </button>
                    <div class="content-group">
                    <label for="file">Escolha o arquivo</label>
                      <%= f.file_field :file, id: 'file', class: 'hidden', accept: '.pdf' %>
                      <%= f.submit 'Anexar arquivo', class: 'btn_upload_file' %>
                    </div>
                </div>
              </div>
            </div>
            <% end %>
        </main>
    </div>
  </div>
</div>

