<div class="app-registration">
    <%= form_tag "/auth/identity/register" do %>
    <div class="demo-card-wide registration-card mdl-card mdl-shadow--2dp" id="signup-form">
      <% if @identity && @identity.errors.any? %>
        <div>
          <h2><%= pluralize(@identity.errors.count, "error") %> prohibited this account from being saved:</h2>
          <ul>
          <% @identity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="container-box ma-10 pa-10">
        <div class="mdl-textfield mdl-js-textfield field ma-10 mdl-textfield--floating-label" type="text">
          <%= label_tag :name, 'Nome Completo', class: 'mdl-textfield__label label-field', for: 'name' %><br>
          <%= text_field_tag :name, @identity.try(:name), class: 'mdl-textfield__input', type: 'text' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield field ma-10 mdl-textfield--floating-label">
          <%= label_tag :email, 'E-mail', class: 'mdl-textfield__label label-field' %><br>
          <%= text_field_tag :email, @identity.try(:email), class: 'mdl-textfield__input' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield field ma-10 mdl-textfield--floating-label">
          <%= label_tag :password, 'Senha', class: 'mdl-textfield__label label-field', for: 'password4' %><br>
          <%= password_field_tag :password, '', class: 'mdl-textfield__input', type: 'password' %>
        </div>
        <div class="mdl-textfield mdl-js-textfield field ma-10 mdl-textfield--floating-label">
          <%= label_tag :password_confirmation, 'Repita a senha', class: 'mdl-textfield__label label-field', for: 'password5' %><br>
          <%= password_field_tag :password_confirmation, '', class: 'mdl-textfield__input', type: 'password' %>
        </div>
        <div class= "link-buttons-group container ma-10 pa-10">
          <%= submit_tag "Registre-se", class: 'w-100 mv-10 purple-btn mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', type: 'submit', data: { disable_with: false } %>
        </div>
      </div>
    </div>
    <% end %>
</div>

