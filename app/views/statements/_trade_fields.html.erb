<tr class="nested-fields">
  <fieldset>
    <td>
      <%= f.text_field :ticker, class: 'mdl-textfield__input', type: 'text', style:"text-align: center;" %>
    </td>
    <td>
      <%= f.radio_button :direction, 0, class: 'mdl-checkbox__input' %>
      <%= f.radio_button :direction, 1, class: 'mdl-checkbox__input' %>
    </td>
    <td>
      <%= f.number_field :quantity, min: 1, class: 'mdl-textfield__input', style:"text-align: center;" %>
    </td>
    <td>
      <%= f.number_field :price, step: :any, min: 0, class: 'mdl-textfield__input', style:"text-align: center;" %>
    </td>
    <td>
      <%= f.radio_button :status, "open", class: 'mdl-checkbox__input' %>
      <%= f.radio_button :status, "close", class: 'mdl-checkbox__input' %>
    </td>
    <td>
      <%= f.hidden_field :_destroy %>
      <div class="mdl-button mdl-js-button mdl-button--icon table-button">
        <i class="material-icons table-item"><%= link_to "delete", '#', class: "remove_fields" %></i>
      </div>
    </td>
  </fieldset>
</tr>